<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent" android:layout_height="45dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#A1887F">
    <ImageView android:id="@+id/additem_group_img"
        android:layout_height="45dip" android:layout_width="40dip"
        android:layout_marginLeft="35dip"
        ></ImageView>
    <TextView android:id="@+id/additem_group" android:layout_width="fill_parent"
        android:layout_height="45dip" android:text="Groups" android:gravity="center_vertical|left"
        android:paddingLeft="5dip" android:paddingRight="5dip"
        android:textColor="#fff" android:textStyle="bold"
        android:textSize="17dip"
        ></TextView>
</LinearLayout>