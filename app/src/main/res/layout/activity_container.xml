<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
tools:context=".MainActivity"
    >
<com.viewpagerindicator.TitlePageIndicator
    android:id="@+id/main_indicator"
    android:padding="10dip"
    android:layout_height="40dip"
    android:layout_width="fill_parent"
    android:background="#EFEBE9"
    android:textColor="#AA6D4C41"
    app:footerColor="#6D4C41"
    app:footerLineHeight="1dp"
    app:footerIndicatorHeight="4dp"
    app:footerIndicatorStyle="underline"
    app:selectedColor="#FF6D4C41"
    app:selectedBold="true"
    />
<android.support.v4.view.ViewPager
    android:id="@+id/main_pager"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.92"
    />
<!-- cauly adv install -->
<com.fsn.cauly.CaulyAdView
    xmlns:app="http://schemas.android.com/apk/res/sculove.scaffolding"
    android:id="@+id/xmladview"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    app:appcode="CAULY"
    app:effect="FadeIn"
    app:dynamicReloadInterval="true"
    app:reloadInterval="15"
    app:bannerHeight="Fixed"
    />
</LinearLayout>